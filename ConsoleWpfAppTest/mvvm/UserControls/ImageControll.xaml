<UserControl x:Class="ConsoleWpfAppTest.mvvm.UserControls.ImageControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleWpfAppTest.mvvm.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary Source="/styles/style.xaml" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image x:Name="Img" Stretch="Uniform" Style="{StaticResource ResourceKey={x:Type Image}}">
            </Image>
        </Grid>

        <Grid Grid.Row="1">
            <Label Name="labelPath" Grid.Column="0" Style="{StaticResource ResourceKey={x:Type Label}}">
                <Label.Content>
                    <Binding ElementName="Img" Path="Source" Converter="{StaticResource ResourceKey=imgSizeConverter}" />
                </Label.Content>
            </Label>
        </Grid>


    </Grid>


</UserControl>
